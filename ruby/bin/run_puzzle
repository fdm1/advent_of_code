#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'advent_of_code'

year = ARGV[0].to_i
day = ARGV[1].to_i
part = ARGV[2].to_i

runner = AdventOfCode::Runner.new(year, day)

case part
when 1
  puts runner.part1
when 2
  puts runner.part2
else
  puts "Invalid part #{part}"
end
