
{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "incremental": true, 
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "target": "es6",
    "paths": {
      "@src/*": ["src/*"]
    }  
  },
  "exclude": [
    "node_modules", "babel.config.js", "jest.config.js"
  ]
}
